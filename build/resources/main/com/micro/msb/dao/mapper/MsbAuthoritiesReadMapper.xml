<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micro.msb.dao.mapper.DaoMapper">			
		
	<resultMap id="msbAuthoritiesReadResult" type="MsbAuthoritiesReadBean">
		<result property="username" column="username"/>
		<result property="authority" column="authority"/>
	</resultMap>
	
	<select id="readMsbAuthorities" parameterType="com.micro.msb.beans.MsbAuthoritiesReadBean" resultMap="msbAuthoritiesReadResult">         
		select * from msb_authorities where username = #{username};
	</select>

</mapper>
